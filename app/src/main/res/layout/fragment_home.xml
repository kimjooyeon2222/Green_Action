<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- 그리드 레이아웃: 각 오염 유형 버튼 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2">

        <!-- 대기 오염 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/air_pollution"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="대기 오염"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:cornerRadius="48dp"/>

        <!-- 수질 오염 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/water_pollution"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="수질 오염"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:cornerRadius="48dp"/>

        <!-- 토양 오염 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/soil_pollution"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:gravity="center"
            android:padding="16dp"
            android:text="토양 오염"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:cornerRadius="48dp"/>

        <!-- 플라스틱 오염 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/plastic_pollution"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@android:color/holo_purple"
            android:gravity="center"
            android:padding="16dp"
            android:text="플라스틱 오염"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:cornerRadius="48dp"/>
    </GridLayout>

    <!-- 커뮤니티 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 커뮤니티 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="커뮤니티"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 게시판 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rounded_corner_background"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 게시판 항목 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_issue_board"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="오늘의 이슈"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_issue_latest_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="오늘의 이슈 최신 글 제목 미리보기"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 게시판 항목 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_free_board"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자유 게시판"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_free_latest_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="자유 게시판 최신 글 제목 미리보기"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 게시판 항목 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_notice_board"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공지사항"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_notice_latest_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="공지사항 최신 글 제목 미리보기"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 게시판 항목 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_qna_board"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Q &amp; A 게시판"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_qna_latest_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Q &amp; A 게시판 최신 글 제목 미리보기"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
